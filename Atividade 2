import java.util.Scanner;

public class ConversaoTemperatura {
    public static void main(String[] args) {
        
        Scanner entrada = new Scanner(System.in);

        System.out.print("Digite a temperatura em graus Celsius (째C): ");
        double celsius = entrada.nextDouble();

        double fahrenheit = (celsius * 9 / 5) + 32;
        double kelvin = celsius + 273.15;

        System.out.println("\n--- Convers찾o de Temperatura ---");
        System.out.println("Temperatura em Celsius: " + celsius + " 째C");
        System.out.println("Temperatura em Fahrenheit: " + fahrenheit + " 째F");
        System.out.println("Temperatura em Kelvin: " + kelvin + " K");

        entrada.close();
    }
}
